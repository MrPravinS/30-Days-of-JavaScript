// Declare variables
let a = 10;
let b = 5;

// Arithmetic Operators
let sum = a + b;       // Addition
let difference = a - b; // Subtraction
let product = a * b;    // Multiplication
let quotient = a / b;   // Division
let remainder = a % b;  // Modulus
let power = a ** b;     // Exponentiation

console.log("Sum:", sum);
console.log("Difference:", difference);
console.log("Product:", product);
console.log("Quotient:", quotient);
console.log("Remainder:", remainder);
console.log("Power:", power);

// Assignment Operators
a += b; // a = a + b
console.log("After += operator, a =", a);

// Comparison Operators
console.log("a == b:", a == b);  // Equal to
console.log("a === b:", a === b); // Strict equal to
console.log("a != b:", a != b);  // Not equal to
console.log("a !== b:", a !== b); // Strict not equal to
console.log("a > b:", a > b);   // Greater than
console.log("a < b:", a < b);   // Less than
console.log("a >= b:", a >= b);  // Greater than or equal to
console.log("a <= b:", a <= b);  // Less than or equal to

// Logical Operators
let x = true;
let y = false;

console.log("x && y:", x && y); // Logical AND
console.log("x || y:", x || y); // Logical OR
console.log("!x:", !x);        // Logical NOT

// Ternary Operator
let max = (a > b) ? a : b;
console.log("Max value:", max);

// Type Operator
console.log("Type of a:", typeof a);

// Bitwise Operators
let bitwiseAnd = a & b;
let bitwiseOr = a | b;
let bitwiseXor = a ^ b;
let bitwiseNot = ~a;
let leftShift = a << 1;
let rightShift = a >> 1;
let zeroFillRightShift = a >>> 1;

console.log("Bitwise AND:", bitwiseAnd);
console.log("Bitwise OR:", bitwiseOr);
console.log("Bitwise XOR:", bitwiseXor);
console.log("Bitwise NOT:", bitwiseNot);
console.log("Left Shift:", leftShift);
console.log("Right Shift:", rightShift);
console.log("Zero Fill Right Shift:", zeroFillRightShift);

// Instanceof Operator
let date = new Date();
console.log("date instanceof Date:", date instanceof Date);
